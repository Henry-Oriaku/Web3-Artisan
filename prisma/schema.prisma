generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String    @default("")
  createdAt     DateTime  @default(now())
  walletAddress String
  isAdmin       Boolean   @default(false)
  isArtisan     Boolean   @default(false)
  featuredImage String?
  Service       Service[]

  @@map("users")
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  price       Decimal  @db.Decimal(10, 2) // Define precision and scale (10 digits, 2 decimal places)
  negotiable  Boolean
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int

  @@map("services")
}
